# DB-Taxi Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Application Configuration
# ============================================
APP_PORT=8080

# ============================================
# Database Configuration
# ============================================
# Primary database connection (for DB-Taxi metadata)
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_DATABASE=myapp
DB_SSL=false

# Database connection pool settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m
DB_QUERY_TIMEOUT=30s

# ============================================
# Server Configuration
# ============================================
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# ============================================
# Logging Configuration
# ============================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log format: json, text
LOG_FORMAT=json

# Log output: stdout, stderr, or file path
LOG_OUTPUT=stdout

# ============================================
# Security Configuration
# ============================================
SESSION_TIMEOUT=30m
READ_ONLY_MODE=false
ENABLE_AUDIT=true

# ============================================
# Sync System Configuration
# ============================================
# Enable/disable sync system
SYNC_ENABLED=true

# Maximum number of concurrent sync jobs
SYNC_MAX_CONCURRENCY=5

# Batch size for bulk operations
SYNC_BATCH_SIZE=1000

# Retry configuration
SYNC_RETRY_ATTEMPTS=3
SYNC_RETRY_DELAY=30s

# Job timeout
SYNC_JOB_TIMEOUT=1h

# History cleanup age
SYNC_CLEANUP_AGE=30d

# Enable data compression during transfer
SYNC_ENABLE_COMPRESSION=true

# Default conflict resolution: skip, overwrite, error
SYNC_DEFAULT_CONFLICT_RESOLUTION=overwrite

# ============================================
# Development/Production Mode
# ============================================
# Set to 'production' for production environment
ENVIRONMENT=development
