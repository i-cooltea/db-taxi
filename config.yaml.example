# DB-Taxi MySQL Web Explorer Configuration File
# Copy this file to config.yaml and modify as needed

server:
  port: 8080
  host: "0.0.0.0"
  read_timeout: "30s"
  write_timeout: "30s"
  enable_https: false
  cert_file: ""
  key_file: ""

database:
  max_open_conns: 25
  max_idle_conns: 5
  conn_max_lifetime: "5m"
  query_timeout: "30s"

security:
  session_timeout: "30m"
  read_only_mode: false
  enable_audit: true

logging:
  level: "info"        # debug, info, warn, error
  format: "json"       # json, text
  output: "stdout"     # stdout, stderr, or file path
  max_size: 100        # MB
  max_backups: 3
  max_age: 28          # days